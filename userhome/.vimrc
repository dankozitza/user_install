" ~/.vimrc (configuration file for vim only)
set tabstop=5
set shiftwidth=3
set expandtab
set nu
set smarttab
set nobackup
set nowritebackup

let perl_include_pod = 1
let perl_extended_vars = 1
let perl_sync_dist = 250

let clang_cpp_completeopt = 'longest,menuone'
let clang_async = 1

filetype plugin indent on

syntax on
colorscheme pablo

set so=7

